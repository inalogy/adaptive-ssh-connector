<resource xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
          xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
          xmlns:icfs="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/resource-schema-3"
          xmlns:org="http://midpoint.evolveum.com/xml/ns/public/common/org-3"
          xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
          xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3"
          xmlns:t="http://prism.evolveum.com/xml/ns/public/types-3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          oid="950f276e-edb9-49b6-a0e4-b3a378a66918">

    <name>OpenBSD</name>

    <description>Resource OpenBSD umožňuje vzdialenú správu používateľov a skupín v systéme OpenBSD prostredníctvom SSH. Poskytuje funkcie na vytváranie, aktualizáciu a správu používateľských účtov vrátane pridávania používateľov do špecifických skupín.</description>
    <lifecycleState>active</lifecycleState>
    <connectorRef relation="org:default" type="c:ConnectorType">

        <filter>
            <q:and>
                <q:equal>
                    <q:path>c:connectorType</q:path>
                    <q:value>com.inalogy.midpoint.connector.ssh.SshConnector</q:value>
                </q:equal>
                <q:equal>
                    <q:path>c:connectorVersion</q:path>
                    <q:value>0.1.0.3</q:value>
                </q:equal>
            </q:and>
        </filter>
    </connectorRef>
    <connectorConfiguration xmlns:icfc="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/connector-schema-3"
                            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                            xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
                            xsi:type="c:ConnectorConfigurationType">
        <icfc:configurationProperties xmlns:gen556="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/bundle/com.inalogy.midpoint.connector.ssh/com.inalogy.midpoint.connector.ssh.SshConnector">
            <gen556:schemaFilePath>$(ssh-openbsd-schemaFilepath)</gen556:schemaFilePath>
            <gen556:host>$(ssh-openbsd.host)</gen556:host>
            <gen556:shellType>$(ssh-openbsd.shellType)</gen556:shellType>
            <gen556:dynamicConfigurationFilePath>$(ssh-openbsd-ConnectorConfigFilePath)</gen556:dynamicConfigurationFilePath>
            <gen556:port>22</gen556:port>
            <gen556:username>$(ssh-openbsd.username)</gen556:username>
            <gen556:password>
                <clearValue>$(ssh-openbsd.password)</clearValue>
            </gen556:password>
        </icfc:configurationProperties>
    </connectorConfiguration>
    <schemaHandling>
        <objectType>
            <displayName>User</displayName>

            <description>Objektová trieda reprezentuje používateľa v systéme OpenBSD, ktorý je spravovaný cez konektor pripojený cez SSH.</description>
            <documentation>Táto objektová trieda je špecifická pre reprezentáciu používateľov v OpenBSD, a je použitá na identifikáciu a manipuláciu účtov.</documentation>
            <intent>user</intent>
            <kind>account</kind>
            <default>true</default>
            <delineation>
                <objectClass>ri:user</objectClass>
            </delineation>
            <focus>
                <type>UserType</type>
            </focus>

            <attribute>
                <ref>ri:type</ref>

                <description>Atribút, ktorý reprezentuje typ účtu</description>
                <documentation>Toto mapovanie definuje typ používateľa, buď ako "staff" alebo "student". V závislosti od splnenej podmienky priradí príslušnú hodnotu. Toto mapovanie sa používa iba pri operácii createOp.</documentation>

                <limitations>
                    <layer>presentation</layer>
                    <access>
                        <read>false</read>
                        <add>false</add>
                        <modify>false</modify>
                    </access>
                </limitations>
                <!--            FIXME: make mapping condition which determinate if staff or student this mapping should be used only in createOp    -->
                <outbound>
                    <strength>weak</strength>
                    <expression>
                        <value>student</value>
                    </expression>
                    <condition>
                        <script>
                            <code>
                                //hack determinate if shadow exists if not send initial mappings
                                if (shadow?.oid){
                                return false
                                }
                                return true
                            </code>
                        </script>
                    </condition>
                </outbound>
            </attribute>

            <attribute>
                <ref>icfs:name</ref>
                <outbound>
                    <strength>weak</strength>
                    <source>
                        <path>name</path>
                    </source>
                </outbound>
            </attribute>3

            <attribute>
                <ref>ri:login</ref>
                <outbound>
                    <source>
                        <path>name</path>
                    </source>
                </outbound>
            </attribute>

            <attribute>
                <ref>ri:password</ref>
                <limitations>
                    <layer>presentation</layer>
                    <access>
                        <read>false</read>
                        <add>false</add>
                        <modify>false</modify>
                    </access>
                </limitations>
                <outbound>
                    <strength>weak</strength>
                    <expression>
                        <value>xxx</value>
                    </expression>
                    <condition>
                        <script>
                            <code>
                                //hack determinate if shadow exists if not send initial mappings
                                if (shadow?.oid){
                                return false
                                }
                                return true
                            </code>
                        </script>
                    </condition>
                </outbound>
            </attribute>


            <attribute>
                <ref>ri:fullName</ref>
                <outbound>
                    <source>
                        <path>givenName</path>
                    </source>
                    <source>
                        <path>familyName</path>
                    </source>
                    <expression>
                        <script>
                            <code>
                                return givenName + " " + familyName
                            </code>
                        </script>
                    </expression>
                </outbound>
            </attribute>
            <!--            <attribute>-->
            <!--                <ref>ri:groups</ref>-->
            <!--            </attribute>-->
            <activation>
                <!-- weak existence -->
                <existence>
                    <outbound>
                        <name>Never try to delete</name>
                        <strength>weak</strength>
                        <expression>
                            <value>true</value>
                        </expression>
                    </outbound>
                </existence>
            </activation>

            <correlation>
                <correlators>
                    <filter>
                        <ownerFilter>
                            <q:equal>
                                <q:path>name</q:path>
                                <expression>
                                    <path>$shadow/attributes/icfs:name</path>
                                </expression>
                            </q:equal>
                        </ownerFilter>
                    </filter>
                </correlators>
            </correlation>

            <synchronization>
                <reaction>
                    <name>deleted -> unlink focus</name>
                    <situation>deleted</situation>
                    <actions>
                        <unlink/>
                    </actions>
                </reaction>
                <reaction>
                    <name>unlinked -> link</name>
                    <situation>unlinked</situation>
                    <actions>
                        <link/>
                    </actions>
                </reaction>
                <reaction>
                    <name>unmatched -> do nothing</name>
                    <situation>unmatched</situation>
                </reaction>
            </synchronization>
        </objectType>
    </schemaHandling>
    <capabilities>
        <native xmlns:cap="http://midpoint.evolveum.com/xml/ns/public/resource/capabilities-3">
            <cap:schema/>
            <cap:create/>
            <cap:read>
                <cap:returnDefaultAttributesOption>false</cap:returnDefaultAttributesOption>
            </cap:read>
            <cap:update>
                <cap:delta>true</cap:delta>
                <cap:addRemoveAttributeValues>true</cap:addRemoveAttributeValues>
            </cap:update>
            <cap:delete/>
            <cap:testConnection/>
        </native>
    </capabilities>
    <projection>
        <assignmentPolicyEnforcement>full</assignmentPolicyEnforcement>
    </projection>
    <consistency>
        <deadShadowRetentionPeriod>PT1S</deadShadowRetentionPeriod>
    </consistency>
</resource>
